  "mirage-flow-lwt-riscv" {>= "1.5.0"}
  "mirage-console-lwt-riscv" {>= "2.3.5"}
  "mirage-random-riscv" {>= "1.2.0"}
  "mirage-flow-lwt-riscv" {>= "1.5.0"}
  "mirage-protocols-lwt-riscv" {>= "2.0.0"}
  "mirage-stack-lwt-riscv" {>= "1.3.0"}
  "mirage-console-lwt-riscv" {>= "2.3.5"}
  "mirage-net-lwt-riscv" {>= "2.0.0"}
  "mirage-fs-lwt-riscv" {>= "2.0.0"}
